<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/month"
        android:text="Month"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="30dp"

        />


    <com.github.sundeepk.compactcalendarview.CompactCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/compactcalendar_view"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:compactCalendarBackgroundColor="#63D587"
        app:compactCalendarCurrentDayBackgroundColor="#3C791B"
        app:compactCalendarCurrentSelectedDayBackgroundColor="#FAEA84"
        app:compactCalendarMultiEventIndicatorColor="#FFFFFF"
        app:compactCalendarTargetHeight="250dp"
        app:compactCalendarTextColor="#FFFFFF"
        app:compactCalendarTextSize="12sp" />

    <TextView
        android:id="@+id/selectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Select Date"
        android:textSize="30dp" />



</LinearLayout>